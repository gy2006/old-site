extends ../layouts/default

block content
  .page-home
    .content-wrapper-270
      .banner
        .slogan
          h1 How much time do you waste on building CI?
          p.subtitle Just give me<br/>the time of a song.

        .form-container
          form#apply-form(method='post' onsubmit="return false;")
            input#email(type='email', name='email', placeholder='Work email', required)
            input(type='submit' value='Apply')
          span.text-danger
          div.form-result.text-success Thanks for applying, We will email you invitation code&nbsp;&nbsp;: )

    .flow-concept
      .content-wrapper-270
        h2
          b Anything
          small you can add to your flow
        button#flow-add-step
          svg(width='22', height='22')
            line(x1='0',y1='11',x2='22',y2='11',stroke-width='4',stroke='white')
            line(x1='11',y1='0',x2='11',y2='22',stroke-width='4',stroke='white')
      .flow
        .flow-line
        .flow-steps
          span.step
            i
            p Push
          span.step
            i
            p Clone Code
          span.step
            i
            p Testing
          span.step
            i
            p Build

    .languages
      .content-wrapper-270
        h2
          b Languages
          small we support currently
        //- h2
        //-   b Language
        //-   small is not the key point
        .langs
          div.lang
            i.icon-ruby
            p Ruby
          div.lang
            i.icon-python
            p Python
          div.lang
            i.icon-php
            p PHP
          div.lang
            i.icon-nodejs
            p Node.js
          div.lang
            i.icon-android
            p Android

    .more-things
      .content-wrapper-270
        h2
          b More things
          small we are buiding
        .things
          div.item
            a(href='https://github.com/FIRHQ/flow.ci' target='_blank').open-source-project
              i.icon-github
              span View our open-source project
          div.item
            a(href='https://gitter.im/FIRHQ/flow.ci' target='_blank').contact
              i.icon-comments-o
              span Chat with other users through Gitter
