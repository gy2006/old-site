extends ../layouts/default

block content
  .page-home
    .section.banner
      .content-wrapper-270
        header.slogan
          h1 Keep your code flowing
          h3 flow.ci, hosted continuous integration and delivery service for innovators who shape the future.

        .form-container
          div.text-danger
          form#apply-form(method='post' onsubmit="return false;")
            input#email(type='email', name='email', placeholder='Work email', required)
            input(type='submit' value='Apply for early access')
          .form-result.text-success Thanks for applying. We will email you invitation code.&nbsp;&nbsp;: )
          .apply-incentive Free, secure and we value your efforts.
    .section.flow-concept
      .content-wrapper-270
        header
          h2 FLOW
          h3 Automate your development workflow without constraints.
      .flow
        .flow-line
        .flow-steps

    .section.plugins
      .content-wrapper-270
        header
          h2 PLUGINS
          h3 No configuration needed, add powerful plugins with one click.
        .categories
          .cate.code-analysis
            h4.title Code Analysis
            .list
              .item
                i.icon-check
                | Rubocop
              .item
                i.icon-check
                | Eslint
              .item
                i.icon-check
                | pep8
              .item
                i.icon-check
                | Codesniffer
                .item
                i.icon-check
                | Pretty Result

          .cate.databases
            h4.title Database
            .list
              .item
                i.icon-check
                | MongoDB
              .item
                i.icon-check
                | MySQL
              .item
                i.icon-check
                | Redis

          .cate.notification
            h4.title Notification
            .list
              .item
                i.icon-check
                | Email
              .item
                i.icon-check
                | Slack

          .cate.others
            h4.title More
            .list
              .item
                i.icon-check
                | Custom Scripts
              .item ...
    .section.languages
      .content-wrapper-270
        header
          h2 LANGUAGES
          h3 We speak your language. Get started with language specific templates. Itâ€™s easy :&nbsp;)
        .langs
          div.lang
            i.icon-ruby
            p Ruby
          div.lang
            i.icon-python
            p Python
          div.lang
            i.icon-php
            p PHP
          div.lang
            i.icon-nodejs
            p Node.js
          div.lang
            i.icon-android
            p Android

    .section.more-things
      .content-wrapper-270
        header
          h2 More to come
          h3 We keep building new stuff. Stay tuned!
        .things
          div.item
            a(href='https://github.com/FIRHQ/flow.ci' target='_blank').open-source-project
              i.icon-github
              span View our open-source project
          div.item
            a(href='https://gitter.im/FIRHQ/flow.ci' target='_blank').contact
              i.icon-comments-o
              span Chat with other users through Gitter
  div.footer-wrap.content-wrapper-270
    <a href="https://mixpanel.com/f/partner" class="mixpanel-footer" rel="nofollow"><img src="//cdn.mxpnl.com/site_media/images/partner/badge_light.png" alt="Mobile Analytics" /></a>
