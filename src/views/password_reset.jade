extends ../layouts/default

block content
  .page-reset-password
    .content-wrapper-270
      .form-container#forget-password
        form.form#forget-password-form(method='post' onsubmit="return false;")
          legend Reset your passowrd
          .form-result.text-success Check your email for a link to reset your password. If it doesn't appear within a few minutes, check your spam folder.
          div.form-control.form-email
            input#email(placeholder='Email', name='email', type='text', required)
            span.text-danger
          div.text-danger.form-error
          input(type='submit', value='Send password reset email')

      .form-container#reset-password
        form.form#reset-password-form(method='post' onsubmit="return false;")
          legend Change your password
          div.form-control.form-password
            input#login(placeholder='Password', name='password', type='password', required)
            span.text-danger
          div.form-control.form-confirm-password
            input#password(placeholder='Confirm Password', name='confirm_password', type='password', required)
            span.text-danger.pull-left
          div.text-danger.form-error
          input(type='submit', value='Change password')