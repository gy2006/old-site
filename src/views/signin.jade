extends ../layouts/default

block content
  .page-signin
    .content-wrapper-270
      .form-container
        form#signin-form(method='post' onsubmit="return false;")
          legend Sign in to flow.ci
          div.form-control.form-loginname
            input#login(placeholder='Email or Username', name='login', type='user', required)
            span.text-danger
          div.form-control.form-password
            input#password(placeholder='Password', name='password', type='password', required)
            a.pull-right(href='/password_reset.html' id='password_reset' title='Forgot password') ?
            span.text-danger.pull-left
          div.text-danger.form-error
          input(type='submit', value='Sign In')
