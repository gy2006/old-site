extends ../layouts/default

block content
  .page-container.page-signup
    .form-container
      form#signup-form
        legend Join flow.ci
        input#email(placeholder='Job Email', name='email' type='email', required)
        input#username(placeholder='Username', type='username' name='username' required, minlength='3')
        input#password(placeholder='Password', name='password', type='password', minlength='6')
        input#sign(type='text', name='sign', placeholder='Invite Code' required)
        input(type='submit', value='Create an account')
