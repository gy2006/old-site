extends ../layouts/default

block content
  .page-signup
    .content-wrapper-270
      .form-container
        form#signup-form(method='post' onsubmit="return false;")
          legend Join flow.ci
          div.form-control.form-email
            input#email(placeholder='Job Email', name='email', type='email', required)
            span.text-danger
          div.form-control.form-username
            input#username(placeholder='Username',  name='username', type='text', minlength='3', maxlength='15', required)
            span.text-danger
          div.form-control.form-password
            input#password(placeholder='Password', name='password', type='password', required)
            span.text-danger
          div.form-control.form-sign
            input#sign(type='text', name='sign', placeholder='Invite Code', required )
            span.text-danger
          div.text-danger.form-error
          input(type='submit', value='Create an account')
